{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "experimentalDecorators": true,
        "declaration": true
    },
    "files": [
        "packages/run/bootstrap.ts"
    ],
    "include": [
        "packages/**/*",
        "examples/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
